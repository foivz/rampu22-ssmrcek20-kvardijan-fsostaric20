<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_postavke_uredivanja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ure_ivanje_namirnice"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/et_naziv_namirnice_uredi"
        android:visibility="visible"
        android:text="@string/naziv_namirnice"/>

    <EditText
        android:id="@+id/et_naziv_namirnice_uredi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:inputType="text"
        android:minHeight="48dp"
        android:visibility="visible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:labelFor="@id/spn_kategorija_namirnice_uredi"
        android:text="@string/mjerna_jedinica_namirnice" />

    <Spinner
        android:id="@+id/spn_kategorija_namirnice_uredi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_postavke_favorita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/postavke_favorita"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="17sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/et_minimalna_kolicina_favorit_tekst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/et_minimalna_kolicina_favorit"
            android:visibility="visible"
            android:text="@string/min_koli_ina"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/et_minimalna_kolicina_favorit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:visibility="visible"
            android:text="@string/_0"
            android:minHeight="48dp"
            android:importantForAutofill="no"
            android:layout_weight="1"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

</LinearLayout>