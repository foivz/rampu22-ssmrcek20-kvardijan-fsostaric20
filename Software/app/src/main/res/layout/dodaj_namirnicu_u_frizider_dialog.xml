<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/et_naziv_nove_namirnice"
        android:text="Unesi ime namirnice:" />
    <EditText
        android:id="@+id/et_naziv_nove_namirnice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:inputType="text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/et_kolicina_nove_namirnice"
        android:text="Odaberite količinu namirnice koju želite dodati:"/>

    <EditText
        android:id="@+id/et_kolicina_nove_namirnice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:importantForAutofill="no"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/spn_kategorija_nove_namirnice"
        android:text="Odaberi mjernu jedinicu namirnice:" />
    <Spinner
        android:id="@+id/spn_kategorija_nove_namirnice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>